{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "src",
    "paths": {
      "@/components/*": ["components/*"],
      "@/context/*": ["context/*"],
      "@/core/*": ["core/*"],
      "@/hooks/*": ["hooks/*"],
      "@/styles/*": ["styles/*"],
      "@/layouts/*": ["layouts/*"],
      "@/utils/*": ["utils/*"],
      "@/configs/*": ["configs/*"],
      "@/lib/*": ["lib/*"],
      "@/store/*": ["store/*"],
      "@/pages/*": ["pages/*"],
      "@/public/*": ["public/*"],
      "apexcharts": ["./node_modules/apexcharts-clevision"],
      "apexcharts/*": ["./node_modules/apexcharts-clevision/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.js",
    "**/*.jsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
